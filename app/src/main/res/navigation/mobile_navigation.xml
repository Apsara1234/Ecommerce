<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ecommerce.Fragment.Homefragment"
        android:label="@string/title_home"
        tools:layout="@layout/homefragment" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.ecommerce.Fragment.Searchfragment"
        android:label="Search"
        tools:layout="@layout/searchfragment" />
    <fragment
        android:id="@+id/navigation_mycart"
        android:name="com.example.ecommerce.Fragment.MycartFragment"
        android:label="My Cart"
        tools:layout="@layout/mycartfragment" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.ecommerce.Fragment.AccountFragment"
        android:label="Account"
        tools:layout="@layout/accountfragment" />
    <fragment
        android:id="@+id/navigation_wishlist"
        android:name="com.example.ecommerce.Fragment.WishlistFragment"
        android:label="Wish List"
        tools:layout="@layout/wishlistfragment" />

</navigation>